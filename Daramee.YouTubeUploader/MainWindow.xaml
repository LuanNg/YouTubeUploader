											</Hyperlink>
                                        </TextBlock>
                                    </StackPanel>
                                    <!-- 1열 상태 표기 -->
                                    <TextBlock Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,0,10,0" VerticalAlignment="Center"
										   Text="{Binding UploadingStatus, Converter={StaticResource uploadingStatusToStringConverter}}"
